//Заполнение списка случайными числами
Процедура КнопкаЗаполнитьНажатие(Кнопка)
    // Очистка списка
    СписокЧисел.Очистить();
    
    // Получение введенного числа
    ЧислоN = ЧислоЗначение;

    // Генерация N случайных чисел
    Для i = 1 по ЧислоN Цикл
        СлучайноеЧисло = СлучайноеЧисло(-ЧислоN * ЧислоN, ЧислоN * ЧислоN);
        ЭлементСписка = СписокЧисел.Добавить();
        ЭлементСписка.Число = СлучайноеЧисло;
    КонецЦикла;

    // Определение минимального и максимального значений
    Минимум = СписокЧисел.ПолучитьМинимум("Число");
    Максимум = СписокЧисел.ПолучитьМаксимум("Число");

    // Выделение цветом минимального и максимального значений
    Для Каждого Элемент Из СписокЧисел Цикл
        Если Элемент.Число = Минимум Тогда
            Элемент.ЦветТекста = Цвета.Красный;
        КонецЕсли;
        Если Элемент.Число = Максимум Тогда
            Элемент.ЦветТекста = Цвета.Зеленый;
        КонецЕсли;
    КонецЦикла;
КонецПроцедуры



//Удаление неположительных чисел и отображение сообщения:
Процедура КнопкаУдалитьНажатие(Кнопка)
    УдаленныеЧисла = Новый Массив;
    
    Для i = СписокЧисел.Количество() По 1 Цикл
        Если СписокЧисел[i].Число <= 0 Тогда
            УдаленныеЧисла.Добавить(СписокЧисел[i].Число);
            СписокЧисел.Удалить(i);
        КонецЕсли;
    КонецЦикла;

    Если УдаленныеЧисла.Количество() > 0 Тогда
        Сообщить("Удалено значений: " + Строка(УдаленныеЧисла.Количество()) + " (" + СокрЛП(Соединить(УдаленныеЧисла, ", ")) + ")");
    КонецЕсли;
КонецПроцедуры



